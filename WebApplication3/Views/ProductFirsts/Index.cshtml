@using PagedList;
@using PagedList.Mvc;


@model IPagedList<WebApplication3.Models.GetProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Product Data", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().PId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Catagory_CId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CatagoryName)
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catagory_CId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatagoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.PId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PId },new { @class="btn btn-danger"})
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model,i=>Url.Action("Index","ProductFirsts",new {i,search=Request.QueryString[""]}))
